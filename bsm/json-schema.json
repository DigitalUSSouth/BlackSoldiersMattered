/**
* This file describes the json schema for this project
*/

/* soldier object 
each soldier will be in its own json file: soldierid.json
*/
{
	"id": "",
	"first_name" : "value",
	"last_name" : "value",
	"residence_county" : "value",
	"residence_city" : "value",
	"entrance_status" : "value",
	"induction_place" : "value",
	"induction_date" : "value", /* ISO 8601 date format */
	"birth_place" : "value",
	"age" : "value", /*we can calculate this from birthdate -Sid 
			We can calculate age for some but the problem is that
			we don't have birthdate for every soldiers, but we do
			have their age - Adrian*/
	"birth_date" : "value", /* ISO 8601 date format */
	"unit_progression" : [
			["unit 1", "company a", "1917-4-3"], /* does this connect to the unit ID downstairs? -Sid  -- yup!*/
			["unit 2", "company b", "1918-1-3"]
			/* etc. */ 
		],
	"rank_progression" : [
			"rank 1" : "1917-4-3",
			"rank 2" : "1918-1-3"
			/* etc. */ 
		],
	"engagements" : [
			"engagement 1", /* does this mean camps or battles? -Sid --Battles, per the 'engagements' column on the soldiers spreadsheet - Adrian*/
			"engagement 2"
			/* etc. */ 
		],
	"discharge_date" : "value", /* ISO 8601 date format */
	"service_date_start" : "value", /* ISO 8601 date format */
	"service_date_end" : "value", /* ISO 8601 date format */
	"wounded" : "value",
	"death_date" : "value", /* ISO 8601 date format */
	"death_cause" : "value",
	"death_notified" : "value"
}

/* camp object 
camps.json will contain an array of camp objects
*/
{
	"id" : "",
	"name" : "value",
	"place" :  "value",
	"type" : "value"
}

/* unit object 
units.json will contain an array of unit objects
*/
{
	"id" : "",
	"service_location" : "value",
	"type" :  "value",
	"location" : [
		["camp","date"], 
		["camp","date"]
			/*does this "camp" pull the whole subsequent camp record from above? -Sid 
			I think so, we will probably need that in order to get the locations and type of camp - Adrian*/
	],
	"port_embarkation" : ["value","date"],
	/* todo: figure out 'where unit served' columns */
	"responsibilities" : "text",
	"unusual_experiences" : "text",
	"demobilized" : ["place","date"],
	"companies" : ["A","B","C" /* etc...*/]
}
